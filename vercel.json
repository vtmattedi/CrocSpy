{
  "rewrites": [
    {
      "source": "/site.webmanifest",
      "has": [
        {
          "type": "header",
          "key": "accept-language",
          "value": "(^pt(-BR)?"
        }
      ],
      "destination": "/br/site.webmanifest"
    },
    {
      "source": "/site.webmanifest",
      "destination": "/en/site.webmanifest"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "installCommand": "npm install --force"
}